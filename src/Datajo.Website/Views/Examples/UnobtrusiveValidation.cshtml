@model ByteCarrot.Datajo.Website.Controllers.Examples.ValidatedFormViewModel

<form id="form1">
    <fieldset>
        <legend>Form validated by jQuery Unobtrusive Validation plugin</legend>
        @Html.TextBoxFor(x => x.Text, new { placeholder = "Add some text and click button below", @class="input-xlarge" })
        @Html.ValidationMessageFor(x => x.Text)
        <div class="form-actions">
            <button class="btn" type="button" data-jo='{"action":"post","target":"#form1","inject":"replaceTarget","url":"/examples/unobtrusivevalidation","form":"#form1"}'>Send</button>
        </div>
    </fieldset>
</form>