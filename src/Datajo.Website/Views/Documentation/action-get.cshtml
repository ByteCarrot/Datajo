@using ByteCarrot.Datajo.Website
@model dynamic

@{
    Layout = MVC.Shared.Views._Layout;
}

<h2>Action: <i>get</i></h2>
<p>
    Uses jQuery's <a href="http://api.jquery.com/jQuery.get/" target="_blank">$.get()</a> function to access specified URL and inject returned HTML to the right place.
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>Parameter</th>
        <th>Required</th>
        <th>Default</th>
        <th>Description</th>
    </tr>
    <tr>
        <td>target</td>
        <td>yes</td>
        <td></td>
        <td>Any valid jQuery selector representing unique HTML element where HTML from a server will be injected</td>
    </tr>
    <tr>
        <td>url</td>
        <td>yes</td>
        <td></td>
        <td>Any valid URL returning a HTML code
        </td>
    </tr>
    <tr>
        <td>inject</td>
        <td>no</td>
        <td>replaceContent</td>
        <td>Any valid <a href="/documentation/html-injection-types">HTML injection type</a>
        </td>
    </tr>
    <tr>
        <td>confirm</td>
        <td>no</td>
        <td></td>
        <td>Text for a confirmation dialog window.</td>
    </tr>
    <tr>
        <td>event</td>
        <td>no</td>
        <td>click</td>
        <td>Any valid <a href="/documentation/event-types">event type</a>
        </td>
    </tr>
</table>
Exmple:
<pre class="brush: js">
{
    "action":"get",
    "target":"#box",
    "url":"http://example.com/sample",
    "inject":"afterContent",
    "confirm":"Are you sure?",
    "event":"click"
}
</pre>

<div id="box1" class="example-box-get"></div>
<div class="btn-group btn-group" style="margin-top: 20px;">
    <a href="#" class="btn" data-jo='{"action":"get","target":"#box1","url":"/examples/get","inject":"afterContent"}'>
        Click me!
    </a>
    <a href="#" class="btn" data-jo='{"action":"get","target":"#box1","url":"/examples/get","inject":"afterContent","confirm":"Are you sure?"}'>
        Click and confirm!
    </a>
    <a href="#" class="btn btn-info" data-jo='{"action":"get","target":"#box1","url":"/examples/get","inject":"replaceContent"}'>
        Reset
    </a>
</div>
