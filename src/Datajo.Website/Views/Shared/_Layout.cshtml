        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span3">
                <div class="well" style="max-width: 340px; padding: 8px 0;">
                    <ul class="nav nav-list">
                        <li><a href="/">Home</a></li>
                        <li><a href="/#overview">Overview</a></li>
                        <li><a href="/#download">Download</a></li>
                        <li><a href="/#installation">Installation</a></li>
                        <li class="nav-header">Actions</li>
                        <li><a href="/documentation/action-show">Show</a></li>
                        <li><a href="/documentation/action-hide">Hide</a></li>
                        <li><a href="/documentation/action-get">Get</a></li>
                        <li><a href="/documentation/action-post">Post</a></li>
                        <li class="nav-header">Miscellaneous</li>
                        <li><a href="/documentation/event-types">Event types</a></li>
                        <li><a href="/documentation/html-injection-types">HTML injection types</a></li>
                        <li><a href="/documentation/multiple-actions">Multiple actions</a></li>
                        <li><a href="/documentation/easing-types">jQuery UI easing type</a></li>
                        <li><a href="/documentation/special-targets">Special targets</a></li>
                        <li><a href="/documentation/ajax-errors?datajo=debug">Ajax errors</a></li>
                        <li><a href="/documentation/activity-indicator">Activity indicator</a></li>
                        <li><a href="/documentation/jquery-validation">jQuery Validation</a></li>
                        <li><a href="/documentation/jquery-unobtrusive-validation">Unobtrusive Validation</a></li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                @RenderBody()
            </div>
        </div>
    </div>
    
    <a href="https://github.com/bytecarrot/datajo" target="_blank">
        <img style="position: absolute; top: 0; right: 0; border: 0; z-index: 1031" src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub">
    </a>

    
</body>
</html>
